{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./target",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "types": ["mocha", "chai", "node"],
    "declaration": true
  },
  "exclude": ["./tests", "./target"],
  "include": ["./src/wasm/pkg/*", "./src/**/*.ts"]
}
